<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 마이바티스 동작 방식을 조정하기 위한 설정 -->
    <settings>
        <!-- 지연로딩 비활성화 -->
        <setting name="lazyLoadingEnabled" value="false"/>

        <!-- 스네이크 케이스 표기법의 컬럼명을 카멜 케이스 표기법 필드명으로 매핑 -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>

        <!-- 컬럼 값이 널값일 경우, 누락되는 현상 방지 -->
        <setting name="callSettersOrNulls" value="true"/>

        <!-- 매퍼 네임스페이스 단위로 동작되는 세컨드 레벨 캐시 비활성화 -->
        <setting name="cacheEnabled" value="false"/>

        <!-- 로컬 캐시 적용 범위 변경 : 명령문 수준 -->
        <setting name="localCacheScope" value="STATEMENT"/>

        <!-- 데이터 삽입 또는 변경 진행시 널값이 포함되었을 경우, 그대로 NULL로 대체 -->
        <setting name="jdbcTypeForNull" value="NULL"/>
    </settings>
</configuration>